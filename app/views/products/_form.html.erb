<div id="product-modal" class="modal fade modal-product" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title text-center"><%= title %></h2>
      </div>
      <%= form_for @product, remote: true do |f| %>
        <div class="modal-body">

          <div class="form-group">
            <%= f.label :value %>
            <span class="error-message" id="value" style="display: none"></span>
            <%= f.number_field :value, class: "form-control" %>
          </div>

          <%= f.submit class: "btn btn-primary btn-block btn-lg" %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>  
  </div>
</div>